<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AR.MaterialComponents.CardView"
        parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">70dp</item>
        <item name="cornerSizeTopRight">70dp</item>
        <item name="cardElevation">20dp</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceOverlay">@style/Widget.AR.MaterialComponents.CardView</item>
    </style>
    <style name="Widget.AR.TextField" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Widget.AR.MaterialComponents.HomeCardView"
        parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeTopRight">45dp</item>
        <item name="cornerSizeBottomRight">45dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
        <item name="cardElevation">20dp</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceOverlay">@style/Widget.AR.MaterialComponents.HomeCardView</item>
    </style>
</resources>